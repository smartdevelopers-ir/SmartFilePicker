<resources>
    <!-- Base application theme. -->
    <style name="sfb_AppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/sfb_colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/sfb_colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/sfb_colorAccent</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:fitsSystemWindows">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/sfb_windowAnimationStyle</item>
        <!--        <item name="android:windowExitAnimation">@anim/fade_out</item>-->
        <!--        <item name="android:windowHideAnimation">@anim/fade_out</item>-->
        <!--        <item name="android:windowShowAnimation">@anim/fade_in</item>-->
        <!--        <item name="android:windowEnterAnimation">@anim/fade_in</item>-->
        <!--        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>-->
        <!--        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>-->
        <!--        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>-->
        <!--        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>-->
    </style>

    <style name="sfb_windowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:windowExitAnimation">@anim/sfb_fade_out</item>
    </style>

    <style name="sfb_WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:taskOpenExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:wallpaperOpenEnterAnimation">@null</item>
        <item name="android:wallpaperOpenExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:wallpaperCloseEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:wallpaperCloseExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:wallpaperIntraOpenEnterAnimation">@null</item>
        <item name="android:wallpaperIntraOpenExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:wallpaperIntraCloseEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:wallpaperIntraCloseExitAnimation">@anim/sfb_fade_out</item>

    </style>

    <style name="sfb_EditorTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/sfb_colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/sfb_colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/sfb_colorAccent</item>-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

</resources>