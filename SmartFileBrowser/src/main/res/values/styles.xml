<resources>
    <!-- Base application theme. -->
    <style name="SFB" parent="Theme.Material3.Light.NoActionBar"/>
    <style name="SFB.Base" parent="SFB"/>

    <style name="SFB.Base.Theme" parent="SFB.Base">
        <item name="SFBColorGallery">@color/sfb_color_gallery</item>
        <item name="SFBColorFile">@color/sfb_color_file</item>
        <item name="SFBColorAudio">@color/sfb_color_audio</item>
        <item name="SFBColorPDF">@color/sfb_color_pdf</item>
        <item name="SFBBottomNavActiveColor">@color/white</item>
        <item name="SFBBottomNavInactiveColor">@color/sfb_color_item_inactive</item>
        <item name="SFBBottomNavColorDisabled">@color/sfb_color_item_disabled</item>
        <item name="SFBCheckboxFillColor">?attr/colorSecondary</item>
        <item name="SFBCheckboxOnFillColor">?attr/colorOnSecondary</item>
        <item name="SFBCheckboxStrokeColor">?attr/colorOnSecondary</item>
    </style>
    <style name="SFB.Base.Theme.Browser" parent="SFB.Base.Theme">

    </style>

    <style name="sfb_BaseAppTheme" parent="SFB.Base.Theme.Browser">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:fitsSystemWindows">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/sfb_windowAnimationStyle</item>

    </style>


    <style name="sfb_windowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:windowExitAnimation">@anim/sfb_fade_out</item>
    </style>

    <style name="sfb_WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:taskOpenExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:wallpaperOpenEnterAnimation">@null</item>
        <item name="android:wallpaperOpenExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:wallpaperCloseEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:wallpaperCloseExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:wallpaperIntraOpenEnterAnimation">@null</item>
        <item name="android:wallpaperIntraOpenExitAnimation">@anim/sfb_fade_out</item>
        <item name="android:wallpaperIntraCloseEnterAnimation">@anim/sfb_fade_in</item>
        <item name="android:wallpaperIntraCloseExitAnimation">@anim/sfb_fade_out</item>

    </style>

    <style name="sfb_BaseAppTheme.sfb_EditorTheme" >

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

</resources>