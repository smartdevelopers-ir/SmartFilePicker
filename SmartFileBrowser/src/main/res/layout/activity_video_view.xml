<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitivties.VideoViewActivity"
    android:background="@color/black"
    >

    <ir.smartdevelopers.smartfilebrowser.customClasses.MyVideoView
        android:id="@+id/sfb_activity_videoView_playerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/sfb_activity_videoView_imagePlaceHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sfb_activity_videoView_imgPlayButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sfb_ic_round_play"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="20dp"
        >
        <LinearLayout
            android:id="@+id/sfb_activity_videoView_playerSeekbarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:background="#B3000000"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sfb_activity_videoView_playerSeekbarCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/sfb_activity_videoView_playerSeekbar"
                app:layout_constraintBottom_toBottomOf="@id/sfb_activity_videoView_playerSeekbar"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="#ffffff"
                tools:text="00:01"
                android:ems="3"
                android:gravity="center"
                android:layout_marginStart="16dp"
                />
            <com.google.android.material.slider.Slider
                android:id="@+id/sfb_activity_videoView_playerSeekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/sfb_activity_videoView_playerSeekbarEndTime"
                app:layout_constraintStart_toEndOf="@id/sfb_activity_videoView_playerSeekbarCurrentTime"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"


                app:thumbColor="#0288D1"
                app:haloColor="#F4F4F4"
                app:tickColor="#D80606"
                app:tickVisible="true"
                app:tickColorActive="#eee"
                app:thumbElevation="2dp"
                app:trackColorActive="#42A5F5"
                app:trackColorInactive="#6142A4F5"
                android:value="30"
                android:valueTo="100"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sfb_activity_videoView_playerSeekbarEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/sfb_activity_videoView_playerSeekbar"
                app:layout_constraintBottom_toBottomOf="@id/sfb_activity_videoView_playerSeekbar"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#ffffff"
                tools:text="00:01"
                android:ems="3"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>